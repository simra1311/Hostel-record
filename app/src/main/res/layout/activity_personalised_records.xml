<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simra.HostelRecords.PersonalisedRecords">


    <TextView
        android:id="@+id/name"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:text="Name :"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAllCaps="true"
        android:layout_margin="10dp"
       />

    <TextView
        android:id="@+id/total_present"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:text="total_present :"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAllCaps="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/total_absent"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:text="total_absent :"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAllCaps="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/total_leaves"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:text="total_leaves :"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAllCaps="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/fine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:text="fine :"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAllCaps="true"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Attendance"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:onClick="clicked"
            android:id="@+id/mark"
            android:textAppearance="@android:style/TextAppearance.Medium"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave for home"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:id="@+id/leave"
            android:onClick="clicked"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
    </LinearLayout>

</LinearLayout>



